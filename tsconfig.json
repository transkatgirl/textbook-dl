{
	"compilerOptions": {
		"target": "ES2020",

		"module": "commonjs",
		"lib": ["ES2022"],

		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
